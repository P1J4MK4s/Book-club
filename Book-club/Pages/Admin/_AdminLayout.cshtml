@inject IAuthorizationService authService



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book_club</title>

    <environment include="Development">
        <link href="~/lib/bulma/css/bulma.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment include="Production">
        <link href="~/lib/bulma/css/bulma.css" rel="stylesheet" />
        <link href="~/lib/bulma/css/bulma.min.css" rel="stylesheet" />
    </environment>

</head>
<body>
    <h3 class="has-text-centered">Admin Panel</h3>
    <div class="columns">
        <div class="column is-3">
            @if ((await authService.AuthorizeAsync(User, "Admin")).Succeeded)
            {
                <div class="menu">
                    <p class="menu-label">Admin Menu</p>
                    <ul class="menu-list">
                        <li><a asp-page="/Admin/Index">Books</a></li>
                    </ul>
                    <p class="menu-label"></p>
                    <ul class="menu-list">
                        <li><a asp-page="/Index">Back To Home</a></li>
                    </ul>
                </div>
            }
        </div>
        <div class="column is-9">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Book_club - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
